{
  "pluginAlias": "Homebridge LED Strip",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "strips": {
        "title": "LED Strips",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "displayName": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "LED"
            },
            "serviceUUID": {
              "title": "Service UUID",
              "type": "string",
              "required": true,
              "default": "fff0"
            },
            "rainbowCycle": {
              "title": "Rainbow Cycle Time",
              "description": "Time in seconds to complete a full rainbow",
              "type": "number",
              "required": true,
              "default": "15"
            },
            "longitude": {
              "title": "Longitude",
              "description": "Your device longitude",
              "type": "number",
              "required": true,
              "default": "0"
            },
            "latitude": {
              "title": "Latitude",
              "description": "Your device latitude",
              "type": "number",
              "required": true,
              "default": "0"
            }
          }
        }
      }
    }
  }
}